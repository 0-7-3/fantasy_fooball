<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
       <%= params[:action]== 'new' ? 'New ' : 'Edit'%> User
      </div>
      <div class="panel-body">
        <div class="row">
          <%= form_for [:admin, @admin_player] do |f| %>
            <div class="col-md-6">

              <div class="form-group">
                <%=f.label :first_name%>
                <%=f.email_field :first_name ,class: 'form-control', placeholder: 'Enter First Name', required: 'true'%>
              </div>
              <div class="form-group">
                <%=f.label :last_name%>
                <%=f.text_field :last_name ,class: 'form-control', placeholder: 'Eneter Last Name', required: 'true'%>
              </div>

              <%= f.submit 'Submit Button', class: "btn btn-default" %>
              <button type="reset" class="btn btn-default">Reset Button</button>
              <a  href="/admin/users" class="btn btn-default">Back</a>
            </div>

          <%end%>
        </div>
      </div>        
    </div>
  </div>    
</div>

